<div
  class="tab-pane fade show"
  id="show-activity"
  role="tabpanel"
  aria-labelledby="show-activity-tab"
>
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Enter name..."
                required
              />
            </div>
            <div class="form-group">
              <label for="type">Type</label>
              <input
                type="number"
                class="form-control"
                id="type"
                name="type"
                placeholder="Enter type..."
                required
              />
            </div>

            <div class="form-group">
              <label for="image">Image</label>
              <input type="file" class="form-control" id="image" name="image" />
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableActivity"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>

              <tbody></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
