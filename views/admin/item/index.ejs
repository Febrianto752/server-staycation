<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/headTag.ejs') %>
  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include('../../partials/sidebar.ejs') %>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <%- include('../../partials/topbar.ejs') %>

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <%- include('../../partials/flashMessage.ejs') %>
            <!-- Page Heading -->
            <h1 class="h3 mb-4 text-gray-800">Item</h1>

            <% if(action === 'view'){ %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <button
                  class="nav-link active"
                  id="show-item-tab"
                  data-toggle="tab"
                  data-target="#show-item"
                  type="button"
                  role="tab"
                  aria-controls="show-item"
                  aria-selected="true"
                >
                  Show Item
                </button>
              </li>
              <li class="nav-item" role="presentation">
                <button
                  class="nav-link"
                  id="add-item-tab"
                  data-toggle="tab"
                  data-target="#add-item"
                  type="button"
                  role="tab"
                  aria-controls="add-item"
                  aria-selected="false"
                >
                  Add Item
                </button>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <!-- content tab show item  -->
              <%- include('tableItem.ejs') %> <%- include('addItem.ejs') %>
            </div>

            <% } else if(action=== 'show images'){ %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <button
                  class="nav-link active"
                  id="show-images-item-tab"
                  data-toggle="tab"
                  data-target="#show-images-item"
                  type="button"
                  role="tab"
                  aria-controls="show-images-item"
                  aria-selected="true"
                >
                  Show Images
                </button>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <!-- content tab show item  -->
              <%- include('showImagesItem.ejs') %>
            </div>
            <% } %>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <%- include('../../partials/footer.ejs') %>
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <%- include('../../partials/modal.ejs') %> <%-
    include('../../partials/script.ejs') %>
  </body>
</html>
