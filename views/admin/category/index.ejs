      // show and set modal update category
      const btnUpdate = document.getElementsByClassName("btn-update")[0];
      const dataTableElem = document.getElementById("dataTable");

      dataTableElem.addEventListener("click", function (event) {
        const targetElem = event.target;
        if (
          targetElem.classList.contains("btn-update") ||
          targetElem.classList.contains("fa-edit")
        ) {
          let dataId = null;
          let dataName = null;

          if (targetElem.classList.contains("btn-update")) {
            dataId = targetElem.dataset.id;
            dataName = targetElem.dataset.name;
          } else {
            dataId = targetElem.parentElement.dataset.id;
            dataName = targetElem.parentElement.dataset.name;
          }

          const inputNameCategory = document.getElementById("name-edit");
          const inputIdCategory = document.getElementById("id-category");

          inputNameCategory.value = dataName;
          inputIdCategory.value = dataId;

          $("#editCategoryModal").modal("show");
        }
      });
